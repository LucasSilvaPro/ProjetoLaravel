
CREATE TABLE Curso(id INT(3) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
nome_curso VARCHAR(50) NOT NULL,
status_curso TINYINT(1) NOT NULL,
data timestamp
);

CREATE TABLE Aluno(id INT(3) UNSIGNED AUTO_INCREMENT PRIMARY KEY,
		nome_aluno VARCHAR(50) NOT NULL,
		curso_id int DEFAULT NULL,
		email_aluno VARCHAR(50) NOT NULL,
		imagem Longblob NOT NULL,
		data timestamp
);

CREATE TABLE login(id int primary key auto_increment not null,usuario varchar('10') not null,senha varchar(10) not null,data timestamp);

INSERT INTO login(usuario,senha) VALUES('admin','admin12345');

